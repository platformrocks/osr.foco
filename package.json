{
  "name": "osr.foco",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm -r install",
    "dev": "pnpm --filter ./packages/desktop dev",
    "build": "pnpm --filter ./packages/desktop build",
    "open": "pnpm --filter ./packages/desktop tauri dev",
    "lint": "eslint packages/desktop/src --ext .js,.ts,.tsx",
    "lint:fix": "pnpm lint -- --fix",
    "format": "prettier --write 'packages/desktop/src/**/*.{js,ts,tsx,json,md}'",
    "release": "release-it",
    "commit": "cz",
    "tauri": "pnpm --filter ./packages/desktop tauri",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "typescript-eslint": "^8.40.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
