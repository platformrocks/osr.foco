{
  "name": "osr.foco",
  "version": "0.1.0",
  "description": "A cross-platform productivity app designed to help users stay focused and accomplish their daily goals",
  "author": "Gui Santos <guilherme@platform.rocks>",
  "license": "MIT",
  "homepage": "https://opensource.rocks",
  "repository": {
    "type": "git",
    "url": "https://github.com/platformrocks/osr.foco.git"
  },
  "bugs": {
    "url": "https://github.com/platformrocks/osr.foco/issues"
  },
  "keywords": [
    "productivity",
    "focus",
    "pomodoro",
    "task-management",
    "tauri",
    "react",
    "typescript",
    "desktop-app"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm -r install",
    "dev": "pnpm --filter ./packages/desktop tauri dev",
    "build": "pnpm --filter ./packages/desktop build",
    "preview": "pnpm --filter ./packages/desktop tauri build",
    "lint": "eslint packages/desktop/src --ext .js,.ts,.tsx",
    "lint:fix": "pnpm lint -- --fix",
    "format": "prettier --write 'packages/**/*.{js,ts,tsx,json,md}'",
    "format:check": "prettier --check 'packages/**/*.{js,ts,tsx,json,md}'",
    "type-check": "pnpm --filter ./packages/desktop type-check",
    "test": "pnpm --filter ./packages/desktop test",
    "release": "release-it",
    "commit": "cz",
    "tauri": "pnpm --filter ./packages/desktop tauri",
    "prepare": "husky",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm bootstrap"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.3.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "typescript-eslint": "^8.40.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react-icons": "^5.5.0"
  }
}
